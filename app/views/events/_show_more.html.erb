
<% if @last_page > @current_page %>

  <%= link_to 'Load More',
{ :page => params[:page] ? params[:page].to_i + 1 : 2,
:controller => controller.controller_name,
  :action => controller.action_name,
  :past => params[:past]},
  :id => 'show_more_link',
  :class => 'load-more',
  :remote => true
%>

<% end %>
