<%= render 'pages/page', :page => @page %>

<div class="author-container">
    <div class="container">
	<div class="row">
	    <% index = 0 %>
	    <% @authors.each do |author| %>


		<% if author.blog_count > 0 || author.resource_count > 0 || author.event_count > 0 %>
		    

		    <%= render 'resources/author', :author => author %>

		    
		    <% index = index + 1 %>
		<% end %>
	    <% end %>

	</div>
    </div>

</div>

