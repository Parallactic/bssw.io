<div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
    <div class='author-col'>

	<% if author.avatar_url %>
	    <%= cl_image_tag(author.avatar_url,
			     :type => :fetch, :width => 350, :height => 350, :invalidate => true, :cloud_name => 'bssw') %>
	<% else %>
<img src="https://raw.githubusercontent.com/betterscientificsoftware/bssw.io/master/images/People_BSSwContributor.png" />

	<% end %>


	<h3>
	    <%= link_to "#{author.first_name} #{author.last_name}", site_items_path(:author => author.slug) %>
	</h3>
	<% if author.title %>
	    <p><%= author.title %></p>
	<% end %>
	    <% if @page && @page.name == 'About' %>
<p><strong><%= author.affiliation %></p>
<% end %>

	<p>
	    <% unless @page && @page.name == 'About' %>
<%= listings(author) %>
	    <% end %>
	</p>



    </div>
</div>
