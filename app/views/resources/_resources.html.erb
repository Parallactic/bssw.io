

<div class='container'>
  <div class='row'>
    <div class="pagination pagination-top col-md-12">
      <%= render :partial => '/layouts/pagination' %>
    </div>
  </div>
</div>

<div class="resources">
  <% resources.each do |resource| %>
    <% if @author %>
      <%= render 'author_listing', :resource => resource  %>
    <% else %>
      <%= render 'listing', :resource => resource  %>
    <% end %>
  <% end %>
  <div class='container'>
    <div class='row'>

      <div class="pagination pagination-bottom col-md-12">

	<%= render :partial => '/layouts/pagination' %>
      </div></div>

    <% if @resources.next_page %>
      <%= render 'show_more' %>
    <% end %>
  </div>

<% if defined?(results) && results %>
  <style>
    .to-top-after-load {
    display:block;
    }
  </style>
<% end %>

