
<% if @posts.total_pages > @posts.current_page %>

  <%= link_to 'Load More',
{ :page => @posts.current_page.to_i + 1,
:controller => controller.controller_name,
  :action => controller.action_name,
:track => params[:track]},
  
  :id => 'show_more_link',
  :class => 'load-more',
  :remote => true %>

<% end %>
