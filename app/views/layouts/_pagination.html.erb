

<% if @resources.respond_to?(:next_page) && controller.action_name == 'search' %>
  <%= will_paginate @resources %>

  <% if @total && @total > @resources.size %>   &nbsp;| <%= link_to "View All", params.merge(:view => 'all', :page => 1).permit! %>
  <% else %>
    1-<%= @resources.size %> of <%= @resources.size %> Items
  <% end %>

<% else %>
  1-<%= @resources.size %> of <%= @total %> Items
<%  if @total > @resources.size %>
  &nbsp;|
  <%= link_to "View All", params.merge(:view => 'all', :page => 1).permit! %>
  <% end %>
<% end %>





