<% @resources = @posts %>

<% if @resources.respond_to?(:next_page) %>
  <%= will_paginate @resources %>

  <% if @resources.total_pages != @resources.current_page %>   &nbsp;| <%= link_to "View All", params.merge(:view => 'all', :page => 1).permit! %>
  <% else %>
    1-<%= @resources.size %> of <%= @resources.size %> Items
<% end %>

<% elsif params[:view] || params[:author] || params[:topic] || params[:category] %>
  1-<%= @resources.size %> of <%= @total %> Items
  <% if @total > @resources.size %>
      &nbsp;|
 <%= link_to "View All", params.merge(:view => 'all', :page => 1).permit! %>
<% end %>
  <% end %>




